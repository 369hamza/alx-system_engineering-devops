#!/usr/bin/env bash
#Bash script that configures an Ubuntu server and localhost resolves to 127.0.0.2 and facebook.com resolves to 8.8.8.8

# Check if script is running on Docker
if grep -q docker /proc/1/cgroup; then
    # Update /etc/hosts file to configure hostname resolution
    sudo sed -i 's/^127\.0\.0\.1\s*localhost/127.0.0.2 localhost/' /etc/hosts
    sudo sed -i 's/^.*facebook\.com/8.8.8.8 facebook.com/' /etc/hosts

    echo "Configuration completed successfully!"
else
    echo "This script should be run inside a Docker container."
fi
